<Window x:Class="WPF_Practice.Code11"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Practice"
        xmlns:vm ="clr-namespace:WPF_Practice"
        mc:Ignorable="d"

        d:DataContext="{d:DesignInstance vm:DataInfo}"
        Title="INotifyPropertyChanged(2)" Height="150" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0,10,0,0">
            <TextBox Text="{Binding NumData}" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center"
                 Width="100"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="+" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Width="42" Height="23" Click="Button_Click" Margin="50,0,0,0"/>
                <Button Content="-" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
              Width="42" Height="22" Click="Button_Click_1" Margin="10,0,0,0"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
